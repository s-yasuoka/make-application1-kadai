<%= form_with model:@book,url:update_book_path(@book.id),method: :patch,local:true do |f| %>

<div class="field">
  <h4>Title</h4>
  <%= f.text_field:title %>
</div>
<div class="field">
  <h4>Body</h4>
  <%= f.text_area:body %>
</div>
<div class="field">
  <%= f.submit'Update Book' %>
</div>

<% end %>

  <%= link_to "Show",book_path(@book.id) %>
   |
  <%= link_to "back",'/books' %>
</body>